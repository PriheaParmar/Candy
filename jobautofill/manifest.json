{
  "manifest_version": 3,
  "name": "JobForm Autofill â€” JSON Profiles",
  "version": "1.0.0",
  "description": "Autofill job application forms using profiles stored as JSON (designed for US jobs).",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://*/*"],
  "icons": {
    "128": "icons/icon-128.png"
  }
}
