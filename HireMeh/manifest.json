{
  "manifest_version": 3,
  "name": "HireMeH",
  "version": "1.0",
  "background": {   
  "service_worker": "background.js"
},
  "description": "Find jobs that match your skills, see compatibility %, and autofill applications.",
  "permissions": ["storage", "scripting", "activeTab","tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon128.jpg"
    }
  },
  
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
],
"host_permissions": ["<all_urls>"],

  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
